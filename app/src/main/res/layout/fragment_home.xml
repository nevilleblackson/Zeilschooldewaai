<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/plaatje_zeilschool"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer venenatis non mauris non lacinia. Maecenas scelerisque arcu nec turpis aliquam, sit amet maximus mauris tincidunt. Nulla accumsan porttitor rhoncus. Nunc sed quam ut quam malesuada commodo. Integer quis dolor mi. Proin vel pretium massa, quis gravida purus. Nam in purus neque. Nulla id turpis fermentum, dapibus nunc eget, tincidunt quam. Etiam facilisis nulla at metus rutrum auctor. Nullam et quam eu nisl aliquet lacinia. Nullam tincidunt urna at nisl tincidunt lacinia non ac odio. Etiam vel interdum dui. Suspendisse vitae scelerisque elit. Etiam sed malesuada justo, ut finibus eli"
            android:textColor="@color/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_one"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="12dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kwadraat" />

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/wadtocht" />

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/omslaan" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>